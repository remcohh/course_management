<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cm_edition_addon" model="ir.ui.view">
        <field name="name">view.edition.addon</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Cursusinformatie">
                    <group>
                        <field name="start_date"/>
                    </group>
                    <notebook>
                        <page string="Inschrijvingen">
                            <field name="registration_field_ids">
                                <tree editable="bottom">
                                    <field name="student"/>
                                </tree>
                            </field>
                        </page>                        
                        <page string="Sessions">
                            <field name="session_field_ids">
                                <tree editable="bottom">
                                    <field name="date_time"/>
                                    <field name="location"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_cm_editions">
        <field name="name">Editions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_cm_editions"
        name="Courses"
        sequence="10"
        action="action_cm_editions"
        parent="menu_cm_root"
    />
</odoo>